{
  "name": "voltage-payments-component",
  "version": "0.1.1",
  "description": "Lightweight, framework-agnostic Bitcoin payment components for web applications using Voltage Payments",
  "type": "module",
  "main": "dist/voltage-payments.js",
  "module": "dist/voltage-payments.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/voltage-payments.esm.js",
      "require": "./dist/voltage-payments.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.svelte",
    "lint:fix": "eslint src --ext .ts,.svelte --fix",
    "format": "prettier --write src/**/*.{ts,svelte}",
    "format:check": "prettier --check src/**/*.{ts,svelte}",
    "type-check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "keywords": [
    "voltage",
    "bitcoin",
    "lightning",
    "payments",
    "components",
    "svelte",
    "typescript",
    "web-components"
  ],
  "author": "Voltage",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/svelte": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.35.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.6.0",
    "terser": "^5.24.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "qrcode": "^1.5.4",
    "qrcode-generator": "^1.4.4",
    "voltage-api-sdk": ">= 0.2.0"
  },
  "peerDependencies": {
    "voltage-api-sdk": ">= 0.2.0"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
